{
  "name": "imaoda-general",
  "version": "0.0.4",
  "description": "imaoda 全能插件，根据不同域名定制个性化服务",
  "permissions": ["activeTab", "declarativeContent", "storage", "background"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "maoda的插件",
    "default_popup": "popup.html",
    "default_icon": {
      "32": "images/icon.png"
    }
  },
  "icons": {
    "32": "images/icon.png"
  },
  "manifest_version": 2,
  "commands": {
    "demoCmd": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "快捷键示例"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
